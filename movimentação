// Movimentação com as teclas de direção
var velocidade = 4; // Define a velocidade de movimentação do player

// Movimento para a esquerda
if (keyboard_check(vk_left)) {
    x -= velocidade;  // Move o player para a esquerda
}

// Movimento para a direita
if (keyboard_check(vk_right)) {
    x += velocidade;  // Move o player para a direita
}

// Movimento para cima
if (keyboard_check(vk_up)) {
    y -= velocidade;  // Move o player para cima
}

// Movimento para baixo
if (keyboard_check(vk_down)) {
    y += velocidade;  // Move o player para baixo
}
